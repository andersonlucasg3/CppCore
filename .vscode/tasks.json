{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Gen Project",
            "command": "pwsh",
            "type": "shell",
            "args": [
                "-c",
                "${workspaceFolder}/Programs/DotNet/ProjectTools/Scripts/GenCodeProject.ps1",
                "-Project", "Core",
                "-Generator", "${input:generators}",
                "-Platform", "${input:platforms}",
                "-Configuration", "${input:configurations}"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Compile",
            "command": "pwsh",
            "type": "shell",
            "args": [
                "-c",
                "${workspaceFolder}/Programs/DotNet/ProjectTools/Scripts/Compile.ps1",
                "-Project", "Core",
                "-Platform", "${input:platforms}",
                "-Configuration", "${input:configurations}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Compile CoreTests",
            "command": "pwsh",
            "type": "shell",
            "windows": {
                "args": [
                    "-c",
                    "${workspaceFolder}/Programs/DotNet/ProjectTools/Scripts/Compile.ps1",
                    "-Project", "Core",
                    "-Platform", "Windows",
                    "-Configuration", "Debug",
                    "-Modules", "CoreTests"
                ]
            },
            "osx": {
                "args": [
                    "-c",
                    "${workspaceFolder}/Programs/DotNet/ProjectTools/Scripts/Compile.ps1",
                    "-Project", "Core",
                    "-Platform", "macOS",
                    "-Configuration", "Debug",
                    "-Modules", "CoreTests"
                ]
            }
        },
        {
            "label": "Compile ProjectTools",
            "command": "pwsh",
            "type": "shell",
            "args": [
                "-c",
                "${workspaceFolder}/Programs/DotNet/ProjectTools/Scripts/Compile.ps1",
                "-Project", "Core",
                "-Platform", "${input:platforms}",
                "-ProjectToolsOnly"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Clean",
            "command": "pwsh",
            "type": "shell",
            "args": [
                "-c",
                "${workspaceFolder}/Programs/DotNet/ProjectTools/Scripts/Compile.ps1",
                "-Project", "Core",
                "-Platform", "${input:platforms}",
                "-Configuration", "${input:configurations}",
                "-Clean"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "generators",
            "description": "Gen project Generators parameter",
            "type": "pickString",
            "options": [
                "VisualStudio",
                "Clang"
            ]
        },
        {
            "id": "platforms",
            "description": "Platforms",
            "type": "pickString",
            "options": [
                "Windows",
                "macOS",
                "iOS",
                "tvOS",
                "Android"
            ]
        },
        {
            "id": "configurations",
            "description": "Configurations",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ]
        }
    ]
}