{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GenCodeProject",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Compile ProjectTools",
            "program": "specified in each platform",
            "windows": {
                "program": "${workspaceFolder}/${input:projects}/Binaries/DotNet/ProjectTools/BuildTool.exe"
            },
            "osx": {
                "program": "${workspaceFolder}/${input:projects}/Binaries/DotNet/ProjectTools/BuildTool"
            },
            "args": [
                "GenCodeProject",
                "-Project=${input:projects}",
                "-Generator=${input:generators}",
                "-Platform=${input:platforms}",
                "-Configuration=${input:configurations}",
                "-DisableMT"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Debug Compile",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Compile ProjectTools",
            "program": "specified in each platform",
            "windows": {
                "program": "${workspaceFolder}/${input:projects}/Binaries/DotNet/ProjectTools/BuildTool.exe"
            },
            "osx": {
                "program": "${workspaceFolder}/${input:projects}/Binaries/DotNet/ProjectTools/BuildTool"
            },
            "args": [
                "Compile",
                "-Project=${input:projects}",
                "-Platform=${input:platforms}",
                "-Configuration=${input:configurations}",
                "-DisableMT"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Debug CoreTests",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "Compile CoreTests",
            "program": "specified in each platform",
            "windows": {
                "program": "${workspaceFolder}/${input:projects}/Binaries/Windows/Debug/CoreTests.exe"
            },
            "osx": {
                "program": "${workspaceFolder}/${input:projects}/Binaries/macOS/Debug/CoreTests"
            },
            "cwd": "${workspaceFolder}",
        }
    ],
    "compounds": [

    ],
    "inputs": [
        {
            "id": "generators",
            "description": "Gen project Generators parameter",
            "type": "pickString",
            "options": [
                "VisualStudio",
                "Clang"
            ]
        },
        {
            "id": "platforms",
            "description": "Platforms",
            "type": "pickString",
            "options": [
                "Windows",
                "macOS",
                "iOS",
                "tvOS",
                "Android"
            ]
        },
        {
            "id": "configurations",
            "description": "Configurations",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ]
        },
        {
            "id": "projects",
            "description": "Project to compile",
            "type": "pickString",
            "options": [
                "Core",
                "CoreTests",
                "AppleFrameworks",
                "Networking",
                "TestSuit"
            ]
        }
    ]
}